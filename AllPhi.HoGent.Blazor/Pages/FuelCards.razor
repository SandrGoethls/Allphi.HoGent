@page "/fuelcards"

@using AllPhi.HoGent.Blazor.Dto.Enums
@using AllPhi.HoGent.Blazor.Services
@using AllPhi.HoGent.Blazor.Dto
@using AllPhi.HoGent.Datalake.Data.Helpers
@using AllPhi.HoGent.Blazor.Components

@inject IFuelCardServices _fuelCardService
@inject IDriverServices _driverService
@inject IVehicleServices _vehicleService
@inject IFuelCardDriverServices _fuelCardDriverService
@inject IDriverVehicleServices _driverVehicleService

<style>
    .table-responsive {
        overflow-x: auto;
        width: 100%;
    }

    .main-table {
        width: inherit;
    }

    .update-table {
        /*padding-top: 100px;*/
    }


    .scrollable-driver-list {
        max-height: 220px;
        overflow-y: auto;
    }

    .tabel-row-design:hover {
        background-color: rgba(33,150,243,0.058823529411764705) !important;
    }

    table tbody .eentest :hover {
        background-color: rgba(33,150,243,0.058823529411764705) !important;
    }

    .search-top {
        height: fit-content;
    }
</style>

<PageTitle>FuelCards</PageTitle>


@if (_isLoading)
{
    <LoadingSpinner IsLoading="@_isLoading" />
}
else
{
    <div class="row mb-5">
        <div class="">
            <div class="main-table">
                <div class="d-flex justify-content-between p-2 flex-column">
                    <div class="d-flex button-mobile-ui">
                        @if (_showAllFuelCards)
                        {
                            <div class="d-flex flex-wrap">
                                <button type="button" class="btn buttons-succes m-2" @onclick="AddNewFuelCard">Tankkaart toevoegen</button>
                                <input class="form-input-select m-2 search-top" placeholder="Zoek op nummerplaat" id="searchOnLicencePlate" @bind="_searchCardNumber" @oninput="OnChangeCardNumber" />
                            </div>
                        }
                        else if (!_showAllFuelCards)
                        {
                            <button type="button" class="btn buttons-succes m-2" @onclick="ShowAllFuelcards">Toon alle tankkaarten</button>
                        }
                    </div>
                </div>

                @if (_showAllFuelCards)
                {
                    <div class="table-responsive ">
                        <table class="table table-hover" style="margin: 0;">
                            <thead>
                                <tr>
                                    <th style="width:0px;"></th>
                                    <th class="tabel-row-design pointer-cursor" @onclick='()=>SortTable("validityDate")'>Vervaldag <span class="fa fa-sort"></span></th>
                                    <th class="tabel-row-design pointer-cursor" @onclick='()=>SortTable("cardnumber")'>Kaart nummer <span class="fa fa-sort"></span></th>
                                    <th class="tabel-row-design pointer-cursor" @onclick='()=>SortTable("pin")'>Pin <span class="fa fa-sort"></span></th>
                                    <th class="tabel-row-design pointer-cursor" @onclick='()=>SortTable("status")'>Status <span class="fa fa-sort"></span></th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (_fuelCardListDto != null && _fuelCardListDto.FuelCardDtos.Any())
                                {
                                    @foreach (var fuelCard in _fuelCardListDto.FuelCardDtos)
                                    {
                                        <tr class="pointer-cursor">
                                            <td class="align-middle border-start" @onclick="(async () => await SelectFuelCard(fuelCard))"><span class="fas fa-gas-pump"></span></td>
                                            <td @onclick="(async () => await SelectFuelCard(fuelCard))">@fuelCard.ValidityDate.ToString("dd-MM-yyyy")</td>
                                            <td @onclick="(async () => await SelectFuelCard(fuelCard))">@fuelCard.CardNumber</td>
                                            @if (pinVisibility.TryGetValue(fuelCard.Id, out var showPin) && showPin)
                                            {
                                                <td @onmouseleave="() => HidePin(fuelCard.Id)" @onclick="() => HidePin(fuelCard.Id)"> @fuelCard.Pin</td>
                                            }
                                            else
                                            {
                                                <td @onclick="() => TogglePin(fuelCard.Id)">
                                                    <span class="fa fa-eye"></span>
                                                </td>
                                            }
                                            <td @onclick="(async () => await SelectFuelCard(fuelCard))">@fuelCard.Status</td>
                                            <td @onclick="(() => SelectAndShowDelete(fuelCard))">
                                                <span type="button" class="fa fa-trash-can" @onclick="() => _showDeleteConfirmation = true" style="color: #cf5256"></span>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="row">
                        <PaginationComponent CurrentPage="@_pageNumber"
                                             TotalPages="@_totalPages"
                                             ItemsPerPage="@_pageSize"
                                             OnPageChanged="HandlePageChanged"
                                             OnItemsPerPageChanged="HandleItemsPerPageChanged" />

                    </div>
                }
            </div>

            @if (_showSendConfirmation && !_showAllFuelCards)
            {
                <div class="main-table">
                    @if (_fuelCardAdded)
                    {
                        <div class="row">
                            <div class="col mb-3">
                                <div class="mb-3">
                                    <h4><span class="far fa-check-circle text-success me-3" data-feather="check-circle"></span>Succesvol toegevoegd</h4>
                                </div>
                                <div>
                                    <p>
                                        Bedankt!<br />
                                        Tankkaart is succesvol toegevoegd.
                                    </p>
                                </div>
                            </div>
                        </div>
                    }
                    else if (_fuelCardUpdated)
                    {
                        <div class="row">
                            <div class="col mb-3">
                                <div class="mb-3">
                                    <h4><span class="far fa-check-circle text-success me-3" data-feather="check-circle"></span>Succesvol bijgewerkt</h4>
                                </div>
                                <div>
                                    <p>
                                        Bedankt!<br />
                                        Tankkaart is succesvol bijgewerkt.
                                    </p>
                                </div>
                            </div>
                        </div>
                    }
                    else if (_fuelCardDeleted)
                    {
                        <div class="row">
                            <div class="col mb-3">
                                <div class="mb-3">
                                    <h4><span class="far fa-check-circle text-success me-3" data-feather="check-circle"></span>Succesvol verwijderd</h4>
                                </div>
                                <div>
                                    <p>
                                        Bedankt!<br />
                                        Tankkaart is succesvol verwijderd.
                                    </p>
                                </div>
                            </div>
                        </div>
                    }
                    else if (_error)
                    {
                        <div class="row">
                            <div class="col mb-3">
                                <div class="mb-3">
                                    <h4><span class="far fa-times-circle text-danger me-3"></span>@ErrorTitle</h4>
                                </div>
                                <div>
                                    <p>
                                        @ErrorMessage<br />
                                        <br />
                                        Gelieve contact op te nemem met onze support via <a href="/">support@allphi.be</a>.
                                    </p>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="row">
                            <div class="col mb-3">
                                <div class="mb-3">
                                    <h4><span class="far fa-times-circle text-danger me-3"></span> Oei, er ging iets verkeerd</h4>
                                </div>
                                <div>
                                    <p>
                                        Excuses! Er ging iets verkeerd.<br />
                                        Gelieve contact op te nemem met onze support via <a href="/">support@allphi.be</a>.
                                    </p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {

                @if (_addNewFuelCard)
                {
                    <div class="wizard-table usermanagement-table-size">
                        <div class="d-flex justify-content-between p-1">
                            <h3>Nieuwe tankkaart</h3>
                        </div>

                        <div class="usermanagement-table-responsive border p-1 d-flex justify-content-around" style="background-color:white;">
                            <div class="d-flex justify-content-around flex-wrap">
                                <div class="row w-100">
                                    <div class="col-md-12" style="">
                                        <FuelCardsWizardForm OnSave="@((x) => SaveNewUser(x))" Drivers="@_driverListDto?.DriverDtos" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                else if (_selectedFuelCard)
                {
                    <div class="update-table">
                        <div class="d-flex justify-content-between p-1 flex-column">
                            <h3>Geselecteerde tankkaart</h3>
                            <div class="d-flex button-mobile-ui">
                                <button type="submit" class="btn buttons-succes m-2" form="fuelcard-form">Tankkaart opslaan</button>
                                @*<button type="button" class="btn buttons-danger m-2" @onclick="() => _showDeleteConfirmation = true">Tankkaart verwijderen</button>*@
                            </div>
                        </div>

                        <div class="p-1" style="background-color: white;">
                            <form class="d-flex justify-content-around flex-wrap" id="fuelcard-form" @onsubmit="@UpdateSelectedUser">
                                <div class="row w-100">
                                    <div class="col-md-6 mb-3">
                                        <label class="d-flex required-field-mark form-titles" for="cardnumber">Kaartnummer:</label>
                                        <input class="form-input-select" id="cardnumber" @bind="_selectedFuelCardDto.CardNumber" />
                                        @if (string.IsNullOrEmpty(_selectedFuelCardDto?.CardNumber))
                                        {
                                            <p class="text-danger" style="font-size: 0.9rem;">Kaartnummer is verplicht</p>
                                        }
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="d-flex required-field-mark form-titles" for="pin">Pin:</label>
                                        <input class="form-input-select" type="number" id="pin" @bind="_selectedFuelCardDto.Pin" />
                                        @if (_selectedFuelCardDto.Pin.ToString().Length != 4)
                                        {
                                            <p class="text-danger" style="font-size: 0.9rem;">Pin is verplicht</p>
                                        }
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="d-flex form-titles" for="status">Status:</label>
                                        <select class="form-input-select" id="status" @bind="@_selectedFuelCardDto.Status">
                                            @foreach (var role in Enum.GetValues(typeof(Status)).Cast<Status>().OrderBy(x => x.ToString()))
                                            {
                                                <option value="@role">@(((Status)role))</option>
                                            }
                                        </select>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="d-flex required-field-mark form-titles" for="validitydate">Vervaldag:</label>
                                        <input class="form-input-select" type="date" id="validitydate" @bind='_selectedFuelCardDto.ValidityDate' />
                                        @if (_selectedFuelCardDto.ValidityDate == DateTime.MinValue)
                                        {
                                            <p class="text-danger" style="font-size: 0.9rem;">Vervaldag is verplicht</p>
                                        }
                                    </div>
                                    <div class="col-md-12 mb-3">
                                        <label class="d-flex form-titles" for="type">Type:</label>
                                        @foreach (var fuelType in Enum.GetValues(typeof(FuelType)))
                                        {
                                            <div class="col-12 d-flex justify-content-between linked-subscriptions-first pointer-cursor border-bottom-solid @(_selectedFuelCardDto.FuelCardFuelTypesDto.Select(x => x.FuelType).Any(x => x == (FuelType)fuelType) ? "tabel-row-selected" : "")"
                                                 @onclick="@(() => CheckFuelTypeChanged((FuelType)fuelType))">
                                                <label class="pointer-cursor">@fuelType</label>
                                                <input class="pointer-cursor" checked="@(_selectedFuelCardDto.FuelCardFuelTypesDto.Select(x => x.FuelType).Any(x => x == (FuelType)fuelType))" type="checkbox" />
                                            </div>

                                        }
                                    </div>
                                    <div class="col-md-12 mb-3 d-flex flex-wrap">
                                        <label class="col-md-3 form-titles">Gekoppelde bestuurders:</label>
                                        <div class="col-md-3" style="margin-right:15px; margin-bottom:5px;">
                                            <input class="w-100" type="text" placeholder="Zoek bestuurder op naam" @bind="_searchNameTerm" @oninput="OnChangeName" />
                                        </div>
                                        <div class="col-md-3">
                                            <input class="w-100" type="number" placeholder="Zoek bestuurder rijksregister" @bind="_searchRegisterNumberTerm" @oninput="OnChangeRegister" />
                                        </div>
                                        @if (_filteredListDriverDto != null && _filteredListDriverDto.Any())
                                        {
                                            <div class="col-12 scrollable-driver-list mt-1">
                                                @foreach (var driver in _filteredListDriverDto.OrderBy(x => x.FirstName))
                                                {
                                                    <div class="col-12 d-flex justify-content-between linked-subscriptions-first pointer-cursor border-bottom-solid @(_checkedDriver.Contains(driver) ? " tabel-row-selected" : "" )"
                                                         @onclick="@(() => CheckDriverChanged(driver))">
                                                        <div class="d-flex col-6">
                                                            <label class="pointer-cursor col-4" style="min-width: 154px;">@driver.FirstName @driver.LastName</label>
                                                            <label class="pointer-cursor col-4">@driver.RegisterNumber</label>
                                                        </div>
                                                        <input class="pointer-cursor" checked="@(_checkedDriver.Contains(driver))" type="checkbox" style="margin-right: 40px; " />
                                                    </div>
                                                }
                                            </div>
                                        }
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                }
                else
                {
                    <div class="col-7">
                        <div class="d-flex justify-content-between p-1">
                            <h4 id="animatedText" style="color: #54a2d5;">Selecteer een tankkaart of klik op 'tankkaart toevoegen'</h4>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
}


<DialogContainer Visible="_showDeleteConfirmation">
    <div class="modal d-flex justify-content-center align-items-center">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Verwijderen</h5>
                </div>
                <div class="modal-body">
                    <p>Bent u zeker dat u de tankkaart wilt verwijderen?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="() => _showDeleteConfirmation = false">Neen</button>
                    <button type="button" class="btn btn-primary" @onclick="async () => { await DeleteFuelCard(_selectedFuelCardDto); }">Ja</button>
                </div>
            </div>
        </div>
    </div>
</DialogContainer>

@code {
    private DriverListDto? _driverListDto;
    private FuelCardListDto? _fuelCardListDto;

    private FuelCardDto _selectedFuelCardDto = new();
    private List<DriverDto> _checkedDriver = new();
    private List<FuelCardDriverDto> _fuelCardDriverDtos = new();

    private IEnumerable<DriverDto> _filteredListDriverDto;

    private bool _addNewFuelCard = false;
    private bool _selectedFuelCard = false;
    private bool _fuelCardUpdated = false;
    private bool _fuelCardDeleted = false;

    private Dictionary<Guid, bool> pinVisibility = new();
    private bool _showPin = false;
    private bool _showSendConfirmation = false;
    private bool _showDeleteConfirmation = false;
    private bool _fuelCardAdded = false;
    private bool _error = false;
    private bool _showAllFuelCards = true;

    public string ErrorTitle { get; set; } = string.Empty;
    public string ErrorMessage { get; set; } = string.Empty;

    private string _searchCardNumber = string.Empty;
    private string _searchNameTerm = string.Empty;
    private string _searchRegisterNumberTerm = string.Empty;
    private int _currentFilterVersion = 0;
    private const int FilterDelay = 700;

    private bool _isSortAscending = false;
    private string _currentSortColumn = "date";
    private int _pageSize = 5;
    private int _pageNumber = 1;
    private int _totalPages;
    private bool _isLoading = true;


    protected override async Task OnInitializedAsync()
    {
        await LoadFuelCardListDto();
        _driverListDto = await _driverService.GetAllDriversAsync();
        _isLoading = false;
    }

    private async Task LoadFuelCardListDto()
    {
        FilterFuelCard filterFuelCard = new FilterFuelCard() { SearchByCardNumber = _searchCardNumber };
        Pagination pagination = new Pagination(_pageNumber, _pageSize);
        _fuelCardListDto = await _fuelCardService.GetAllFuelCardsAsync(_currentSortColumn, _isSortAscending, filterFuelCard, pagination);
        _totalPages = (int)Math.Ceiling((double)_fuelCardListDto.TotalItems / _pageSize);
    }

    private void AddNewFuelCard()
    {
        SetBoolDefault();

        _selectedFuelCard = false;
        _fuelCardDeleted = false;
        _addNewFuelCard = true;
        _showAllFuelCards = false;
    }

    private void SetBoolDefault()
    {
        _showSendConfirmation = false;
        _error = false;
    }

    private async Task SelectAndShowDelete(FuelCardDto fuelCardDto)
    {
        await SelectFuelCard(fuelCardDto);
        ShowAllFuelcards();
        _showDeleteConfirmation = true;
        _showAllFuelCards = false;

    }


    private async Task SelectFuelCard(FuelCardDto selectedCard)
    {
        _isLoading = true;

        _selectedFuelCardDto = selectedCard;
        _fuelCardDriverDtos = (await _fuelCardDriverService.GetFuelCardWithConnectedDriversByFuelCardId(_selectedFuelCardDto.Id)).Item1;
        var v = _fuelCardDriverDtos.Select(x => _driverListDto.DriverDtos.Where(r => x.DriverId == r.Id).ToList()).ToList();
        _checkedDriver = v.SelectMany(x => x.Select(x => x).ToList()).ToList();
        _showSendConfirmation = false;
        _selectedFuelCard = true;
        _addNewFuelCard = false;
        _fuelCardAdded = false;
        _fuelCardUpdated = false;
        _fuelCardDeleted = false;
        _showAllFuelCards = false;

        _filteredListDriverDto = _driverListDto?.DriverDtos ?? new();

        _isLoading = false;
    }

    private void CheckDriverChanged(DriverDto driverDto)
    {
        if (_checkedDriver.Contains(driverDto))
            _checkedDriver.Remove(driverDto);
        else
            _checkedDriver.Add(driverDto);
    }

    private void CheckFuelTypeChanged(FuelType fuelType)
    {
        if (_selectedFuelCardDto.FuelCardFuelTypesDto.Select(x => x.FuelType).Any(x => x == fuelType))
        {
            var existingFuelCardType = _selectedFuelCardDto.FuelCardFuelTypesDto.FirstOrDefault(x => x.FuelType == fuelType);
            _selectedFuelCardDto.FuelCardFuelTypesDto.Remove(existingFuelCardType);
        }
        else
        {
            _selectedFuelCardDto.FuelCardFuelTypesDto.Add(new FuelCardFuelTypeDto
            {
                Id = Guid.NewGuid(),
                FuelCardId = _selectedFuelCardDto.Id,
                FuelType = fuelType
            });
        }

        InvokeAsync(StateHasChanged);
    }

    private async Task SortTable(string columnName)
    {
        _isLoading = true;
        if (_currentSortColumn == columnName)
        {
            _isSortAscending = !_isSortAscending;
        }
        else
        {
            _currentSortColumn = columnName;
            _isSortAscending = true;
        }

        await LoadFuelCardListDto();

        _isLoading = false;
    }

    private void ShowAllFuelcards()
    {
        _showAllFuelCards = true;
        _addNewFuelCard = false;
        _selectedFuelCard = false;
    }

    private void TogglePin(Guid fuelCardId)
    {
        if (pinVisibility.ContainsKey(fuelCardId))
        {
            // Toggle de bestaande status
            pinVisibility[fuelCardId] = !pinVisibility[fuelCardId];
        }
        else
        {
            // Standaard, toon de pin als deze nog niet in de dictionary staat
            pinVisibility[fuelCardId] = true;
        }

        StateHasChanged();
    }

    private void HidePin(Guid fuelCardId)
    {
        if (pinVisibility.ContainsKey(fuelCardId))
        {
            // Zet de pin zichtbaarheid op false
            pinVisibility[fuelCardId] = false;
        }

        StateHasChanged();
    }

    // <====================================================>
    // <======================= CRUD =======================>
    // <====================================================>
    private async Task SaveNewUser(FuelCardDto fuelCardDto)
    {
        _isLoading = true;

        try
        {
            if (fuelCardDto is not null)
            {
                var (status, statusMessage) = await _fuelCardService.AddFuelCardAsync(fuelCardDto);

                var (statusRelatedDrivers, statusMessageRelatedDrivers) = await _fuelCardDriverService.UpdateFuelCardDriverAsync(fuelCardDto.Id, fuelCardDto.DriverDtos.Select(x => x.Id).ToList());

                if (!status)
                {
                    ErrorTitle = " Oei, er ging iets verkeerd tijdens het toevoegen.";
                    ErrorMessage = statusMessage;
                    _error = true;
                }
                else
                    _fuelCardAdded = true;

                _showSendConfirmation = true;
                await LoadFuelCardListDto();
                await InvokeAsync(StateHasChanged);
            }
        }
        catch (Exception ex)
        {
            ErrorTitle = " Oei, er ging iets verkeerd tijdens het toevoegen.";
            ErrorMessage = $"Excuses! Er ging iets verkeerd tijdens het toevoegen. Error: {ex.Message}";
            _error = true;
        }

        _isLoading = false;
    }

    private async Task DeleteFuelCard(FuelCardDto fuelCardDto)
    {
        _isLoading = true;

        try
        {
            if (fuelCardDto is not null)
            {
                await _fuelCardService.DeleteFuelCardAsync(fuelCardDto.Id);

                _showSendConfirmation = true;
                _fuelCardDeleted = true;

                await LoadFuelCardListDto();
                await InvokeAsync(StateHasChanged);
            }
            _showDeleteConfirmation = false;
        }
        catch (Exception ex)
        {
            ErrorTitle = " Oei, er ging iets verkeerd tijdens het verwijderen";
            ErrorMessage = $"Excuses! Er ging iets verkeerd tijdens het verwijderen. Error: {ex.Message}";
            _error = true;
            _showDeleteConfirmation = false;
        }

        _isLoading = false;
    }

    private async Task UpdateSelectedUser()
    {
        _isLoading = true;

        try
        {
            if (_selectedFuelCardDto is not null)
            {
                var updatedFuelCard = await _fuelCardService.UpdateFuelCardAsync(_selectedFuelCardDto);
                var (statusRelatedDrivers, statusMessageRelatedDrivers) = await _fuelCardDriverService.UpdateFuelCardDriverAsync(_selectedFuelCardDto.Id, _checkedDriver.Select(x => x.Id).ToList());

                if (!updatedFuelCard || !statusRelatedDrivers)
                {
                    ErrorTitle = " Oei, er ging iets verkeerd tijdens het updaten.";
                    ErrorMessage = statusMessageRelatedDrivers;
                    _error = true;
                }
                else
                    _fuelCardUpdated = true;

                _showSendConfirmation = true;
                await LoadFuelCardListDto();
            }
        }
        catch (Exception ex)
        {
            ErrorTitle = " Oei, er ging iets verkeerd tijdens het bijwerken";
            ErrorMessage = $"Excuses! Er ging iets verkeerd tijdens het bijwerken. Error: {ex.Message}";
            _error = true;
        }

        _isLoading = false;
    }

    // <====================================================>
    // <==================== PAGINATION ====================>
    // <====================================================>
    private async Task HandlePageChanged(int page)
    {
        _pageNumber = page;
        await LoadFuelCardListDto();
    }

    private async Task HandleItemsPerPageChanged(int itemsPerPage)
    {
        _pageSize = itemsPerPage;
        await LoadFuelCardListDto();
    }

    // <====================================================>
    // <====================== SEARCH ======================>
    // <====================================================>
    private async Task OnChangeName(ChangeEventArgs e)
    {
        var version = ++_currentFilterVersion;
        _searchNameTerm = e.Value?.ToString() ?? string.Empty;

        await Task.Delay(FilterDelay);

        if (version == _currentFilterVersion)
        {
            var naam = _driverListDto?.DriverDtos.Where(x => x.FirstName.ToLower().Contains(_searchNameTerm.ToLower())).ToList();
            if (naam != null && naam.Any())
                _filteredListDriverDto = naam;
            else
                _filteredListDriverDto = _driverListDto?.DriverDtos ?? new();
        }
    }

    private async Task OnChangeRegister(ChangeEventArgs e)
    {
        var version = ++_currentFilterVersion;
        _searchRegisterNumberTerm = e.Value?.ToString() ?? string.Empty;

        await Task.Delay(FilterDelay);

        if (version == _currentFilterVersion)
        {
            var registerNumber = _driverListDto?.DriverDtos.Where(x => x.RegisterNumber.Contains(_searchRegisterNumberTerm)).ToList();
            if (registerNumber != null && registerNumber.Any())
                _filteredListDriverDto = registerNumber;
            else
                _filteredListDriverDto = _driverListDto?.DriverDtos ?? new();
        }
    }

    private async Task OnChangeCardNumber(ChangeEventArgs e)
    {
        var version = ++_currentFilterVersion;
        _searchCardNumber = e.Value?.ToString() ?? string.Empty;

        await Task.Delay(FilterDelay);

        if (version == _currentFilterVersion)
            await LoadFuelCardListDto();
    }
