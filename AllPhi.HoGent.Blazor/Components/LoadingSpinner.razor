@if (IsLoading || TableIsLoading)
{
    <div class="text-center">
        <button class="btn" type="button" disabled style="font-size: 1.5rem; color: white; background-color: #2099c6">
            <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
            Loading...
        </button>
    </div>
}

@code {
    [Parameter]
    public bool IsLoading { get; set; }

    [Parameter]
    public bool TableIsLoading { get; set; }
}
