<div style="width: 220px;" class="py-3">
    <div class="rounded text-info my-2">
        <h6 class="px-4">Menu</h6>
        <p class="px-4 text-secondary">List</p>
        <hr class="my-2" />
        <a class="icon-color d-block text-decoration-none px-4 py-2 @(_selectedLink == "home" ? "selected-grow" : "hover-grow")" @onclick='() => SelectLink("home")' href="/home">
            <i class="fa-solid fa-house fa-xl"></i> Home
        </a>
        <a class="icon-color d-block text-decoration-none px-4 py-2 @(_selectedLink == "fuelcards" ? "selected-grow" : "hover-grow")" @onclick='() => SelectLink("fuelcards")' href="#">
            <i class="fas fa-gas-pump fa-xl"></i> Tankkaarten
        </a>
        <a class="icon-color d-block text-decoration-none px-4 py-2 @(_selectedLink == "drivers" ? "selected-grow" : "hover-grow")" @onclick='() => SelectLink("drivers")' href="#">
            <i class="fas fa-id-card fa-xl"></i> Bestuurders
        </a>
        <a class="icon-color d-block text-decoration-none px-4 py-2 @(_selectedLink == "vehicles" ? "selected-grow" : "hover-grow")" @onclick='() => SelectLink("vehicles")' href="/vehicles">
            <i class="fas fa-car-side fa-xl"></i> Wagens
        </a>
    </div>
</div>



@code {
    private string _selectedLink = "home";

    private void SelectLink(string linkName)
    {
        _selectedLink = linkName;
        StateHasChanged();
    }
}
